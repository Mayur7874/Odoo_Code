<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_line_spt_view_form" model="ir.ui.view">
            <field name="name">account.move.line.spt.view.form</field>
            <field name="model">account.move.line.spt</field>
            <field name="arch" type="xml">
                <form string="Customer Data">
                    <sheet>
                        <group>
                            <field name="order_name"/>
                            <field name="partner_id"/>
                            <field name="invoice_id"/>
                            <field name="payment_selection" />
                            <field name="fixed_amount"/>
                            <field name="percentage_amount"/>
                            <field name="total"/>
                            <field name="subtotal"/>
                            <field name="sale_order_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_move_line_spt_view_tree" model="ir.ui.view">
            <field name="name">account.move.line.spt.view.tree</field>
            <field name="model">account.move.line.spt</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="partner_id"/>
                    <field name="order_name" invisible="1"/>
                    <field name="payment_selection"/>
                    <field name="fixed_amount" attrs="{'readonly': [('payment_selection','=','percentage')]}" force_save="1"/>
                    <field name="percentage_amount" attrs="{'readonly': [('payment_selection','=','fixed')]}" force_save="1"/>
                    <field name="subtotal" invisible="1"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>

        <record id="action_account_move_line_spt" model="ir.actions.act_window">
            <field name="name">move line spt</field>
            <field name="res_model">account.move.line.spt</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_account_move_line_spt" name="Move Spt" action='action_account_move_line_spt' parent='menu_main_demo_model_spt'/>
    </data>
</odoo>