<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sale_order_inherit_form_view" model="ir.ui.view">
            <field name="name">sale.order.inherit.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header/button[@name='action_cancel']" position="after">
                    <button name="action_order_spt" type="object" string="Customer Order"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position='after'>
                    <field name="image" widget="image" height='50' width='50'/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position='after'>
                    <field name="image" widget="image" height='50' width='50'/>
                </xpath>
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page string="Commission">
                        <field name="commission_ids"/>
                    </page>
                </xpath>
                <field name="payment_term_id" position="after">
                    <field name="payment_date" force_save="1"/>
                    <field name="account_move_id" invisible="1"/>
                </field>
                <field name="partner_id" position="after">
                    <field name="partner_child_ids" />
                </field>
            </field>
        </record>


        <record id="sale_order_inherit_tree_view" model="ir.ui.view">
            <field name="name">sale.order.inherit.tree.view"</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='name']" position='after'>
                    <button name="action_order_data" type="object" string="Order data"/>
                </xpath>
                <!-- <xpath expr="//tree/field[@name='name']" position='after'>
                    <button name="action_fenil_data" type="object" string="invoice data"/>
                </xpath> -->
            </field>
        </record>

    </data>
</odoo>