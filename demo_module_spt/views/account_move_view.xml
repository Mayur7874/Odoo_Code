<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_move_inherit_form_view" model="ir.ui.view">
            <field name="name">account.move.inherit.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="before">
                    <field name="invoice_pay_data"/>
                </field>
                <xpath expr="//notebook/page[@name='other_info']" position="after">
                    <page string="Customer Data">
                        <field name="sale_order_data_line_ids"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>