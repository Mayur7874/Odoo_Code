<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_template_sale_order_spt_document">
        <t t-call="web.external_layout">
            <div class="page">
                <div>
                    <div>
                        <h1 class="text-left">
                            <span t-field="doc.partner_id.name"/>
                        </h1>
                        <h4 class="text-right">
                            <div class="text-left">
                                <span t-field="doc.partner_id.street"/>
                                <span t-field="doc.partner_id.street2"/>
                                <br/>
                                <span t-field="doc.partner_id.city"/>
,
                                <span t-field="doc.partner_id.state_id.name"/>
,
                                <span t-field="doc.partner_id.zip" />
                                <br/>
                                <span t-field="doc.partner_id.country_id.name"/>
                            </div>
                        </h4>
                    </div>
                </div>
                <div>
                    <h2 class="mt16">
                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                            <span t-if="doc.state not in ['draft','sent']"/>
                            <strong>Order#</strong>
                            <span t-if="doc.state in ['draft','sent']">Quotation # </span>
                        </t>
                        <t t-if="env.context.get('proforma', False) or is_pro_forma">
                            <span>Pro-Forma Invoice # </span>
                        </t>
                        <strong>
                            <span t-field="doc.name"/>
                        </strong>
                    </h2>
                </div>
                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.client_order_ref" class="col-auto mw-100 mb-2">
                        <strong>Your Reference:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto mw-100 mb-2">
                        <strong>Order Date:</strong>
                        <p class="m-0" t-field="doc.date_order"/>
                    </div>
                    <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto mw-100 mb-2">
                        <strong>Quotation Date:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                    </div>
                    <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2" name="expiration_date">
                        <strong>Expiration:</strong>
                        <p class="m-0" t-field="doc.validity_date"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto mw-100 mb-2">
                        <strong>Salesperson:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                </div>
                <div>
                    <table class="table table-sm o_main_table" name='sale_order_table'>
                        <thead>
                            <tr>
                                <th name="th_description">
                                    <span>Description</span>
                                </th>
                                <th name="th_image">
                                    <span>Image</span>
                                </th>
                                <th name="th_quantity">
                                    <span>Quantity</span>
                                </th>
                                <th name="th_price">
                                    <span>Unit Price</span>
                                </th>
                                <th name="th_taxes">
                                    <span>Taxes</span>
                                </th>
                                <th name="th_subtotal">
                                    <span>Subtotal</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-foreach="doc.order_line" t-as="order_line">
                                <tr>
                                    <td>
                                        <span t-field="order_line.name"/>
                                    </td>
                                    <td>
                                        <span t-field="order_line.image" t-options='{"widget": "image" ,"style":"max-width: 80px; display: inline-block"}'/>
                                    </td>
                                    <td>
                                        <span t-field="order_line.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <span t-field="order_line.price_unit"/>
                                    </td>
                                    <td>
                                        <t t-if="order_line.tax_id">
                                            <span t-field="order_line.tax_id.amount"/>
                                        </t>
                                    </td>
                                    <td>
                                        <span t-field="order_line.price_total"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                
                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                    <div class="text-right">
                        <strong>Untaxed_amount :</strong>
                        <span t-field="doc.amount_untaxed" class="text-right"/>
                    </div>
                    <div class="text-right">
                        <strong>Taxed Amount :</strong>
                        <span t-field="doc.amount_tax" class="text-right"/>
                    </div>
                    <hr class="solid"/>
                    <div class="text-right">
                        <strong>Total Amount :</strong>
                        <span t-field="doc.amount_total" class="text-right" />
                    </div>
                    <hr class="dotted"/>
                </div>
                <div class="oe_structure"/>
                <t t-if="doc.amount_total >= 500.00">
                    <div class="text-center">
                        <h1>
                            <strong>Thank You, Visit Again.</strong>
                        </h1>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="report_template_sale_order_spt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="demo_module_spt.report_template_sale_order_spt_document"/>
            </t>
        </t>
    </template>

</odoo>
