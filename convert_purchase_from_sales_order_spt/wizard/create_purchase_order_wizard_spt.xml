<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data>
        <record id="create_purchase_order_wizard_spt_form_view" model="ir.ui.view">
            <field name="name">create.purchase.order.wizard.spt.form.view</field>
            <field name="model">create.purchase.order.wizard.spt</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" required="1"/>
                            </group>
                            <group>
                                <field name="sale_order_date" required="1"/>
                            </group>
                        </group>
                        <field name="sale_order_lines_ids">
                            <tree>
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="product_uom_qty"/>
                            </tree>
                        </field>

                    </sheet>
                    <footer>
                        <button name="action_create_purchase_order" type='object' string="Create Purchase Order" class="btn-primary"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>