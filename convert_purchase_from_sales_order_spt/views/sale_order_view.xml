<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_inherit_form_view_spt" model="ir.ui.view">
            <field name="name">sale.order.inherit.form.view.spt</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header/button[@name='action_cancel']" position="after">
                    <button name="action_purchase_from_sale_order" type="object" string="Create Purchase Order " class='btn btn-primary' attrs="{'invisible': [('select_purchase', '=', True)]}"/>
                </xpath>
                <field name="require_payment" position="after">
                    <field name="select_purchase" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>