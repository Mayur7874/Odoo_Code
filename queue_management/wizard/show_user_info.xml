<?xml version="1.0" encoding='UTF-8' ?>

<odoo>
    <data>
        <record id="show_user_view_form" model="ir.ui.view">
        <field name="name">show.user.view.form</field>
        <field name="model">show.user.info</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
                <footer>
                    <button name="action_show_user" type="object" string="Show User" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>

        </record>   

        <record id="action_show_user" model="ir.actions.act_window">
        <field name="name">Show User</field>
        <field name="res_model">show.user.info</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        </record>

    </data>
</odoo>