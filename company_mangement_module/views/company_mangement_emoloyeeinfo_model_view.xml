<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_info_form_view" model="ir.ui.view">
            <field name="name">employee.info.form.view</field>
            <field name="model">employee.info</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="address" />
                                <field name="mo_number"  required="1"/>
                                <field name="dob_date" />
                                <field name="add_file" />
                            </group>
                            <group>
                                <field name="select_Resident" />
                                <field name="post" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="employee_info_tree_view" model="ir.ui.view">
            <field name="name">employee.info.tree.view</field>
            <field name="model">employee.info</field> 
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="mo_number" widget="phone"/>
                    <field name="dob_date" widget="date"/>
                </tree>
            </field>
        </record>

        <record id="action_employee_info" model="ir.actions.act_window">
            <field name="name">employee info</field>
            <field name="res_model">employee.info</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_product_info" model="ir.actions.act_window">
            <field name="name">product info</field>
            <field name="res_model">product.info</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="menu_main_employee_info" name="CompanyMangement" />
        <menuitem id="menu_employee_infot" name="Employeeinfo" action='action_employee_info' parent='menu_main_employee_info'/>
        <menuitem id="menu_product_infot" name="Productinfo" action='action_product_info' parent='menu_main_employee_info'/>
    </data>
</odoo>