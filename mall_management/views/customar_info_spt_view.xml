<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="customar_info_spt_form_view" model="ir.ui.view">
            <field name="name">customar.info.spt.form.view"</field>
            <field name="model">customar.info.spt</field>
            <field name="arch" type="xml">
                <form>
                <header>
                    <field name="state" widget="statusbar" visible_statesbar="draft,confirm" clickable="1" />
                </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button string="Confirm" type="object" name="update_confirm" class="oe_stat_button" icon="fa-cubes"  attrs="{'invisible':[('state','=','confirm')]}">
                            <field name="cus_to_pro_qun" string="Quantity" widget="statinfo" readonly="1"/>
                            </button>
                            <button string="Category wise" type="object" name="category_wise_info" class="oe_stat_button" icon="fa-cubes" />
                            <button string="Product Name wise" type="object" name="com_wise_info" class="oe_stat_button" icon="fa-cubes" />
                        </div>
                        <div class="oe_title" modifiers="{}">
		                    <h1>
				                <field name="cus_name" placeholder="Employee's Name" required="True" />
		                    </h1>
                        </div>
                        <group>
                            <group>
                                <field name="cus_name" required="1"/>
                                <field name="cus_address" required="1"/>
                                <field name="cur_to_productname_id"/>
                                <field name="pur_category" required="1" />
                                <field name="cus_to_pro_qun" required="1"/>
                            </group>
                            <group>
                                <!-- <field name="pur_name"/>  -->
                                <field name="pur_date"/>
                                <field name="pur_product_company"/>
                                <field name="cus_sale_price"/>
                                <!-- <field name="cus_warranty_selection"/> -->
                                <field name="cus_pro_warranty_time" />
                                <field name="cus_pro_my" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="customar_info_spt_tree_view" model="ir.ui.view">
            <field name="name">customar.info.spt.tree.view"</field>
            <field name="model">customar.info.spt</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="cus_name"/>
                    <field name="pur_category"/>
                    <field name="cus_sale_price"/>
                    <field name="pur_product_company"/>
                    <field name="cus_to_pro_qun" />
                    <field name="state"/>
                </tree>
            </field>
        </record> 


        <record id="customar_info_spt_tree_search" model="ir.ui.view">
                <field name="name">customar.info.spt.tree.search</field>
                <field name="model">customar.info.spt</field>
                <field name="arch" type="xml">
                <search string="Search Customar">
                    <field name="pur_category"></field>
                    <field name="pur_product_company"></field>
                    <field name="cus_name"></field>
                </search>
            </field>
        </record>


       


         <record id="action_customar_info_spt" model="ir.actions.act_window">
            <field name="name">Customar Information</field>
            <field name="res_model">customar.info.spt</field>
            <field name="view_mode">tree,form</field>
        </record>

        
     
        <menuitem id="menu_customar_info_spt" action='action_customar_info_spt' name="Customar" parent='menu_main_mall_management'/>
    </data>
</odoo>