<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sale_order_inherit_form_view" model="ir.ui.view">
            <field name="name">sale.order.inherit.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div[1]" position="inside">
                    <button name="action_marge_sale_order_list" type="object" string="Merge sale Order list" class="oe_stat_button" icon="fa-cubes icon" attrs="{'invisible':[('merge_sale_order','=',False)]}"/>
                </xpath>
                <field name="payment_term_id" position="after">
                    <field name="merge_sale_order" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>




