<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="auto_sale_workflow_spt_view_form" model="ir.ui.view">
            <field name="name">auto.sale.workflow.spt.view.form"</field>
            <field name="model">auto.sale.workflow.spt</field>
            <field name="arch" type="xml">
                <form string="Auto Work">
                    <sheet>
                        <div>
                            <group>
                                <group>
                                    <field name="name" required="1"/>
                                </group>
                                <group>
                                    <field name="payment_journal_id" attrs="{'invisible':[('register_payment','=',False)],'required':[('register_payment','=',True)]}"/>
                                </group>
                            </group>
                        </div>
                        <group>
                            <group string='Workflow Option'>
                                <field name="confirm_order"/>
                                <field name="validation_picking"/>
                                <field name="create_invoice"/>
                                <field name="confirm_invoice"/>
                                <field name="register_payment"/>
                                <field name="force_inventory_available"/>
                            </group>
                            <group string="Order configuration">
                                <field name="shipping_policy_spt"/>
                                <field name="expected_days" attrs="{'invisible':[('shipping_policy_spt','in',('direct',False))],'required':[('shipping_policy_spt','=','one')]}"/>
                                <field name="invoice_policy_spt" attrs="{'invisible':[('create_invoice','=',False)],'required':[('create_invoice','=',True)]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="auto_sale_workflow_spt_view_tree" model="ir.ui.view">
            <field name="name">auto.sale.workflow.spt.view.tree"</field>
            <field name="model">auto.sale.workflow.spt</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="payment_journal_id"/>
                    <field name="shipping_policy_spt"/>
                    <field name="invoice_policy_spt" />
                </tree>
            </field>
        </record>


        <record id="action_auto_sale_workflow_spt" model="ir.actions.act_window">
            <field name="name">Automated Workflow</field>
            <field name="res_model">auto.sale.workflow.spt</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_auto_sale_workflow_spt" name="Auto Processing" parent="sale.menu_sale_config" groups="automated_sale_order_processing_spt.group_auto_process"/>
        <menuitem id="sub_menu_auto_sale_workflow_spt" name="Auto Sales Order Workflow" parent="menu_auto_sale_workflow_spt" action="action_auto_sale_workflow_spt"/>
    </data>
</odoo>