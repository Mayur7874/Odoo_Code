<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bundle_pack_product_template_inherit_form_view_spt" model="ir.ui.view">
            <field name="name">bundle.pack.product.template.inherit.form.view.spt</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div[2]/div[1]" position="inside">
                    <div>
                        <field name="is_product_pack"/>
                        <label for="is_product_pack" string='Product Pack'/>
                    </div>
                </xpath>
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page string="Product Pack" attrs="{'invisible': [('is_product_pack', '=', False)]}">
                        <field name="pack_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_id" domain="[('is_product_pack','!=',True)]"/>
                                <field name="lst_price" />
                                <field name="product_qty"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//page[@name='variants']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_product_pack','=',True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_product_tmpl_forecast_report']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_product_pack','=',True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_view_stock_move_lines']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_product_pack','=',True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_view_orderpoints']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_product_pack','=',True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_open_product_lot']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_product_pack','=',True)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_view_po']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_product_pack','=',True)]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="action_bundle_product_template_spt" model="ir.actions.act_window">
            <field name="name">Bundle Product</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_product_pack','=',True)]</field>
            <field name="context">{'default_is_product_pack' : True}</field>
        </record>

    <menuitem name="Bundle Pack" action="action_bundle_product_template_spt" id="menu_bundle_product_template_spt" parent="sale.product_menu_catalog" />
    </data>
</odoo>