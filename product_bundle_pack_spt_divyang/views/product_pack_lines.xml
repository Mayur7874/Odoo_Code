<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_pack_lines_form_view" model="ir.ui.view">
            <field name="name">product.pack.lines.form.view</field>
            <field name="model">product.pack.lines</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="product_tmpl_id"/>
                                <field name="lst_price" />
                                <field name="product_qty"/>
                                <field name="qty_available"/>
                                <field name="bundle_template_id" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_pack_lines_tree_view" model="ir.ui.view">
            <field name="name">product.pack.lines.tree.view</field>
            <field name="model">product.pack.lines</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="product_tmpl_id"/>
                    <field name="product_qty"/>
                </tree>
            </field>
        </record>

        <record id="action_product_pack_lines" model="ir.actions.act_window">
            <field name="name">Bundle Lines</field>
            <field name="res_model">product.pack.lines</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <menuitem name="Bundle Lines" action="action_product_pack_lines" id="menu_product_pack_lines" parent="sale.product_menu_catalog" /> -->
    </data>
</odoo>
