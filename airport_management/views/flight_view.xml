<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="flight_form_view" model="ir.ui.view">
            <field name="name">flight.form.view</field>
            <field name="model">flight</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="Aviation_id"/>
                                <field name="country"/>
                            </group>
                            <group>
                                <field name="flight_route_id" required="1"/>
                                <field name="category"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="flight_tree_view" model="ir.ui.view">
            <field name="name">flight.tree.view</field>
            <field name="model">flight</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="Aviation_id"/>
                    <field name="country"/>
                    <field name="flight_route_id"/>
                    <field name="category"/>
                </tree>
            </field>
        </record>

        <record id="action_flight" model="ir.actions.act_window">
            <field name="name">Flight</field>
            <field name="res_model">flight</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_flight" name="Flight" action='action_flight' parent='menu_main_airline_management'/>
    </data>
</odoo>