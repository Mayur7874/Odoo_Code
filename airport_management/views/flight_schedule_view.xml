<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="flight_schedule_form_view" model="ir.ui.view">
            <field name="name">flight.schedule.form.view</field>
            <field name="model">flight.schedule</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="arrival_time"/>
                                <field name="departure_time"/>
                                <field name="flight_id" required="1"/>
                                <field name="aviation_id"/>
                                <field name="route_id"/>
                            </group>
                            <group>
                                <field name="date" required="1"/>
                                <field name="category" required="1"/>
                                <field name="gate_id" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="flight_schedule_tree_view" model="ir.ui.view">
            <field name="name">flight.schedule.tree.view</field>
            <field name="model">flight.schedule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date" required="1"/>
                    <field name="flight_id" required="1"/>
                    <field name="route_id"/>
                    <field name="arrival_time"/>
                    <field name="departure_time"/>
                    <field name="gate_id" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_flight_schedule" model="ir.actions.act_window">
            <field name="name">Flight schedule</field>
            <field name="res_model">flight.schedule</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_main_airline_management" name="Surat Airport Management" action='action_flight_schedule'/>

    </data>
</odoo>