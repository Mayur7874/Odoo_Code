<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gate_form_view" model="ir.ui.view">
            <field name="name">gate.form.view</field>
            <field name="model">gate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="category" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="gate_tree_view" model="ir.ui.view">
            <field name="name">gate.tree.view</field>
            <field name="model">gate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="category"/>
                </tree>
            </field>
        </record>

        <record id="action_gate" model="ir.actions.act_window">
            <field name="name">Gates</field>
            <field name="res_model">gate</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_gate" name="Gates" action='action_gate' parent='menu_main_airline_management'/>
    </data>
</odoo>