<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="route_form_view" model="ir.ui.view">
            <field name="name">route.form.view</field>
            <field name="model">route</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="category" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="route_tree_view" model="ir.ui.view">
            <field name="name">route.tree.view</field>
            <field name="model">route</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="category"/>
                </tree>
            </field>
        </record>

        <record id="action_route" model="ir.actions.act_window">
            <field name="name">Routes</field>
            <field name="res_model">route</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_route" name="Routes" action='action_route' parent='menu_main_airline_management'/>
    </data>
</odoo>