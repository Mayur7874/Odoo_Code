<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="equ_employee_form_view" model="ir.ui.view">
            <field name="name">equ.employee.form.view</field>
            <field name="model">equ.employee</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="contact"/>
                                <field name="post" required="1"/>
                            </group>
                            <group>
                                <field name="address"/>     
                                <field name="email"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="equ_employee_tree_view" model="ir.ui.view">
            <field name="name">equ.employee.tree.view</field>
            <field name="model">equ.employee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" required="1"/>
                    <field name="contact"/>
                    <field name="post" required="1"/>
                </tree>
            </field>
        </record> 


       


        <record id="action_equ_employee" model="ir.actions.act_window">
            <field name="name">Employee Information</field>
            <field name="res_model">equ.employee</field>
            <field name="view_mode">tree,form</field>
        </record>

          
       
        <menuitem id="menu_equ_employee" action='action_equ_employee' name="Employee" parent='main_menu_equipment_management'/>
    </data>
</odoo>